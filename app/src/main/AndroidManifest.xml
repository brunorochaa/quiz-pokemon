<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="thiago.dias.pokemonquiz">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FinalQuiz"></activity>
        <activity android:name=".Screen5"
            android:immersive="true"
            android:theme="@style/ScreenTheme"/>
        <activity android:name=".Screen4"
            android:immersive="true"
            android:theme="@style/ScreenTheme"/>
        <activity android:name=".Screen3"
            android:immersive="true"
            android:theme="@style/ScreenTheme"/>
        <activity android:name=".Screen2"
            android:immersive="true"
            android:theme="@style/ScreenTheme"/>
        <activity android:name=".Screen1"
            android:immersive="true"
            android:theme="@style/ScreenTheme"/>
        <activity
            android:name=".SplashScreen"
            android:immersive="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:immersive="true"
            android:theme="@style/ScreenTheme"/>
    </application>

</manifest>